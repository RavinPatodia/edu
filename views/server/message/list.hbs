<div class="row">
    <div class="col-md-12">

        <table class="table">
            <thead>
            <tr>
                <th>内容</th>
                <th>姓名</th>
                <th>邮箱</th>
                <th>IP</th>
                <th>时间</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>
            {{#each messages}}
            <tr>
                <td><a href="{{../adminDir}}/message/{{id}}">{{content}}</a></td>
                <td>{{#if name}}{{name}} {{else}} 匿名{{/if}}
                </td>
                <td>{{email}}</td>
                <td>{{ip}}</td>
                <td>{{dateFormat created 'yyyy-MM-dd hh:mm:ss'}}</td>
                <td>

                    <a data-toggle="modal"
                       data-target="#myModal"
                       data-url="{{../adminDir}}/message/{{id}}/del"
                       class="btn btn-default btn-xs">删除</a>

                </td>
            </tr>
            {{/each}}
            </tbody>
        </table>

        {{#if pageInfo}}
             {{#compare pageInfo.totalPage '>' 1}}
               <ul class="pagination">{{{pagination pageInfo}}}</ul>
            {{/compare}}
        {{/if}}
    </div>
</div>
