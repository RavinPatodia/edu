<div class="row">
    <div class="col-md-12">
            <div class="lead">我的信息</div>
            <ul class="list-group">
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-2"><img src="{{avatar User.email}}" class="img-circle">
                        </div>
                        <div class="col-md-10">
                            <a href="{{adminDir}}/me/edit" title="编辑" style="margin-top: 20px">
                            <span class="glyphicon glyphicon-edit"></span></a>
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-2"><strong>用户名</strong></div>
                        <div class="col-md-10">{{user.username}}</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-2"><strong>名字</strong></div>
                        <div class="col-md-10">{{user.name}}</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-2"><strong>Email</strong></div>
                        <div class="col-md-10">{{user.email}}</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-2"><strong>手机号</strong></div>
                        <div class="col-md-10">{{user.mobile}}</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-2"><strong>生日</strong></div>
                        <div class="col-md-10">{{user.birthday}}</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-2"><strong>性别</strong></div>
                        <div class="col-md-10">{{user.gender}}</div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-2"><strong>注册日期</strong></div>
                        <div class="col-md-10">{{user.created}}</div>
                    </div>
                </li>
            </ul>
    </div>
</div>



<div class="row">
    <div class="col-md-12">

            <div class="lead">修改密码</div>
            <div class="panel-body">
                <form action="{{adminDir}}/me/updatepwd" method="post" >
                    <div class="form-group">
                        <label>旧密码</label>

                            <input type="password" name="oldpassword" class="form-control">

                    </div>
                    <div class="form-group">
                        <label >新密码</label>

                            <input type="password" name="password" class="form-control">

                    </div>
                    <div class="form-group">
                        <label >确认新密码</label>

                            <input type="password" name="repassword" class="form-control">

                    </div>
                    <input type="hidden" name="_csrf" value="{{token}}">
                    <button type="submit" class="btn btn-default">提交</button>

                </form>
            </div>
        </div>
</div>