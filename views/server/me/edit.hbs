<div class="row">
    <div class="col-md-12">

                <form role="form" action="{{adminDir}}/me/edit" method="post" >

                    <div class="form-group">
                        <label for="inputPassword4" >姓名</label>

                            <input id="inputPassword4" type="text" name="name" value="{{user.name}}" placeholder="姓名" class="form-control">

                    </div>
                    <div class="form-group">
                        <label for="inputPassword6" >手机号</label>

                            <input id="inputPassword6" type="mobile" name="mobile" value="{{user.mobile}}" placeholder="手机号" class="form-control">

                    </div>
                    <div class="form-group">
                        <label for="J_birthday" >生日</label>

                            <input id="J_birthday" type="text" name="birthday" value="{{dateFormat user.birthday 'yyyy-MM-dd'}}" placeholder="生日" class="form-control">

                    </div>
                    <div class="form-group">
                        <label for="inputPassword5" >性别</label>

                            <select name="gender" class="form-control input-sm">
                                <option value="保密">保密</option>
                                <option value="男">男</option>
                                <option value="女">女</option>
                            </select>

                    </div>
                    <input type="hidden" name="_csrf" value="{{token}}">

                            <button type="submit" class="btn btn-default">提交</button>

                </form>
            </div>

</div>