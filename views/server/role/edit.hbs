<div class="row">
    <div class="col-md-12">
        <p class="lead">
            <a href="{{adminDir}}/role/" class="btn btn-default btn-sm">角色列表</a>
            <a href="{{adminDir}}/role/add" class="btn btn-default btn-sm">添加角色</a>
        </p>
        <form action="" method="post">
            <div class="form-group">
                <label>名称</label>
                <input name="name" value="{{data.name}}" class="form-control">
            </div>
            <div class="form-group">
                <label>权限</label>
                <h4>选择权限</h4>
                {{#each ACTIONS}}
                    {{name}}
                    <ul class="list-group">
                        {{#each actions}}
                            <li class="list-group-item">
                                <label>
                                    <input name="actions[]" type="checkbox" value="{{value}}"

                                        {{#compare ../../data.actions 'contains' value}}checked{{else}}undefined{{/compare}}

                                    >{{name}} {{description}}
                                </label>
                            </li>
                        {{/each}}
                    </ul>
                {{/each}}

            </div>
            <div class="form-group">
                <label>描述</label>
                <textarea name="description" rows="8" class="form-control">分类管理员</textarea>
            </div>
            <input type="hidden" name="_csrf" value="{{token}}">
            <button type="submit" class="btn btn-default">提交</button>
        </form>
    </div>
</div>

<!-- Load these page level functions-->
{{#section 'scripts'}}
    <script type="text/javascript">
    </script>
{{/section}}
