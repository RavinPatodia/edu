<div class="row">
    <div class="col-md-12">
        <p class="lead">
            <a href="{{adminDir}}/tag/" class="btn btn-default btn-sm">标签列表</a>
            <a href="{{adminDir}}/tag/add" class="btn btn-default btn-sm">添加标签</a>
        </p>
        <form action="" method="post">
            <div class="form-group">
                <label>名称</label>
                <input name="name" value="{{tag.name}}" class="form-control">
            </div>
            <div class="form-group">
                <label>描述</label>
                <textarea name="description" rows="8" class="form-control">{{tag.description}}</textarea>
            </div>
            <input type="hidden" name="_csrf" value="{{token}}">
            <button type="submit" class="btn btn-default">提交</button>
        </form>
    </div>
</div>
