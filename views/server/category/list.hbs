<div class="row">
<div class="col-md-12">
    <p class="lead"><a href="/admin/category/add" class="btn btn-default btn-sm">添加分类</a></p>

    <table class="table">
        <thead>
        <tr>
            <th>名称</th>
            <th>副名稱</th>
            <th>标记</th>
            <th>创建者</th>
            <th>创建时间</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        <tr>
{{#each categorys}}
            <td><a href="{{../adminDir}}/category/{{id}}">{{name}}</a></td>
            <td>{{subName}}</td>
            <td>{{flag}}</td>
            <td>{{author.name}}</td>
            <td>{{dateFormat created 'yyyy-MM-dd hh:mm:ss'}}</td>
            <td><a href="{{../adminDir}}/category/{{id}}/edit" class="btn btn-default btn-xs">编辑</a>&nbsp;

                <a data-toggle="modal"
                   data-target="#myModal"
                   data-url="{{../adminDir}}/category/{{id}}/del"
                   class="btn btn-default btn-xs"
                >删除
                </a>

                <!--<a href="{{../adminDir}}/category/{{id}}/del" class="btn btn-default btn-xs J_del">删除</a>--></td>
        </tr>
{{/each}}
        </tbody>
    </table>
    {{#if pageInfo}}
        {{#compare pageInfo.totalPage '>' 1}}
            <ul class="pagination">{{{pagination pageInfo}}}</ul>
        {{/compare}}
    {{/if}}
</div>
</div>

